# vim:set ft=upstart ts=2 et:
description "Neutron Cisco cfg Agent"
author "Metacloud Engineering <mc-tech-eng@cisco.com>"

start on runlevel [2345]
stop on runlevel [!2345]

respawn

chdir /var/run

pre-start script
  mkdir -p /var/run/neutron
  chown neutron:root /var/run/neutron
end script

exec start-stop-daemon --start --chuid neutron --exec /usr/bin/neutron-cisco-cfg-agent -- \
    --config-file=/etc/neutron/neutron.conf \
    --config-file=/etc/neutron/plugins/cisco/cisco_cfg_agent.ini \
    --config-file=/etc/neutron/plugins/cisco/cisco_router_plugin.ini \
    --config-file=/etc/neutron/neutron-cisco-agent.conf
